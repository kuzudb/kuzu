-GROUP TCKWithSkipLimit3
-DATASET CSV tck

--

# Get rows in the middle
-CASE Scenario1
-STATEMENT CREATE NODE TABLE A(ID SERIAL, name STRING, PRIMARY KEY(ID));
---- ok
-STATEMENT CREATE (:A {name: 'A'}),
                  (:A {name: 'B'}),
                  (:A {name: 'C'}),
                  (:A {name: 'D'}),
                  (:A {name: 'E'});
---- ok
-STATEMENT MATCH (n)
           WITH n
           ORDER BY n.name ASC
           SKIP 2
           LIMIT 2
           RETURN n;
-CHECK_ORDER
---- 2
{_ID: 0:2, _LABEL: A, ID: 2, name: C}
{_ID: 0:3, _LABEL: A, ID: 3, name: D}

