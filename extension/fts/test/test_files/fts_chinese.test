-DATASET CSV empty-db

--

-CASE ChineseFTSComprehensive
-LOAD_DYNAMIC_EXTENSION fts

# === Basic Chinese Documents ===
-STATEMENT CREATE NODE TABLE ZhDoc (ID SERIAL, title STRING, text STRING, PRIMARY KEY (ID));
---- ok

-STATEMENT CREATE (d:ZhDoc {title: '自然语言处理', text: '我来到北京清华大学进行自然语言处理研究'});
---- ok
-STATEMENT CREATE (d:ZhDoc {title: '机器学习', text: '机器学习与数据挖掘技术在人工智能领域应用广泛'});
---- ok
-STATEMENT CREATE (d:ZhDoc {title: '深度学习', text: '深度学习是机器学习的重要分支'});
---- ok

# Create Chinese FTS index with simplified interface
-STATEMENT CALL CREATE_FTS_INDEX('ZhDoc', 'zh_idx', ['text'], tokenizer:='jieba', stemmer:='none');
---- ok

# Test 1: Single compound term (conjunctive)
-STATEMENT CALL QUERY_FTS_INDEX('ZhDoc', 'zh_idx', '清华大学', conjunctive:=true, top:=5) RETURN node.title;
---- 1
自然语言处理

# Test 2: AI/ML compound terms (disjunctive) 
-STATEMENT CALL QUERY_FTS_INDEX('ZhDoc', 'zh_idx', '机器学习', conjunctive:=false, top:=5) RETURN node.title;
---- 2
机器学习
深度学习

# Test 3: Technical vocabulary
-STATEMENT CALL QUERY_FTS_INDEX('ZhDoc', 'zh_idx', '人工智能', conjunctive:=false, top:=5) RETURN node.title;
---- 1
机器学习

# Test 4: Individual character terms
-STATEMENT CALL QUERY_FTS_INDEX('ZhDoc', 'zh_idx', '技术', conjunctive:=false, top:=5) RETURN node.title;
---- 1
机器学习

# === Advanced Technical Terms ===
-STATEMENT CREATE NODE TABLE TechDoc (ID SERIAL, title STRING, content STRING, PRIMARY KEY (ID));
---- ok
-STATEMENT CREATE (d:TechDoc {title: 'AI研究', content: '人工智能和机器学习是现代技术的核心'});
---- ok
-STATEMENT CREATE (d:TechDoc {title: '深度学习', content: '神经网络和深度学习推动了AI的发展'});
---- ok
-STATEMENT CREATE (d:TechDoc {title: 'NLP应用', content: '自然语言处理在对话系统中广泛应用'});
---- ok
-STATEMENT CREATE (d:TechDoc {title: '数据科学', content: '数据挖掘和大数据分析是关键技术'});
---- ok

-STATEMENT CALL CREATE_FTS_INDEX('TechDoc', 'tech_idx', ['content'], tokenizer:='jieba', stemmer:='none');
---- ok

# Test advanced compound terms
-STATEMENT CALL QUERY_FTS_INDEX('TechDoc', 'tech_idx', '神经网络', conjunctive:=false, top:=5) RETURN node.title;
---- 1
深度学习

-STATEMENT CALL QUERY_FTS_INDEX('TechDoc', 'tech_idx', '数据挖掘', conjunctive:=false, top:=5) RETURN node.title;
---- 1
数据科学

# === Mixed Chinese-English Content ===
-STATEMENT CREATE NODE TABLE MixedDoc (ID SERIAL, text STRING, PRIMARY KEY (ID));
---- ok
-STATEMENT CREATE (d:MixedDoc {text: '机器学习算法在AI中很重要'});
---- ok
-STATEMENT CREATE (d:MixedDoc {text: 'Python和机器学习结合开发AI应用'});
---- ok

-STATEMENT CALL CREATE_FTS_INDEX('MixedDoc', 'mixed_idx', ['text'], tokenizer:='jieba', stemmer:='none');
---- ok

-STATEMENT CALL QUERY_FTS_INDEX('MixedDoc', 'mixed_idx', '机器学习', conjunctive:=false, top:=5) RETURN node.text;
---- 2
机器学习算法在AI中很重要
Python和机器学习结合开发AI应用

# === Conjunctive vs Disjunctive Modes ===
-STATEMENT CALL QUERY_FTS_INDEX('TechDoc', 'tech_idx', '深度学习 发展', conjunctive:=true, top:=5) RETURN node.title;
---- 1
深度学习

-STATEMENT CALL QUERY_FTS_INDEX('TechDoc', 'tech_idx', '人工智能 应用', conjunctive:=false, top:=5) RETURN node.title ORDER BY node.title;
